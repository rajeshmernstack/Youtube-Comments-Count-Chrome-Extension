{
  "name": "Youtube Comment Count",
  "description": "Chrome Extension for counting comments of youtube video ",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "/images/icon.png",
    "32": "/images/icon.png",
    "48": "/images/icon.png",
    "128": "/images/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/icon.png",
      "32": "/images/icon.png",
      "48": "/images/icon.png",
      "128": "/images/icon.png"
    }
  },
  "options_page": "options.html",
  "permissions": [
    "tabs"
  ],
  "host_permissions": ["http://*/*", "https://*/*"]
 
}
